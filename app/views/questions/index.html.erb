<div class="container">
	<%= render 'form' %>
	<h1>Questions</h1>

	<% @questions.each do |question| %>
		<article class="card w-50 mb-3">
			<div class="card-body">
				<h5 class="card-title"><%= question.title %></h5>

				<p class="card-text">
					<%= question.body %>
					<br>

				<time datetime="<%= question.formatted_time %>">
					<%= question.formatted_time %>
				</time>
				</p>
				
				<%= link_to "Show", question_path(question), class: "btn btn-primary" %>
				<%= link_to "Edit", edit_question_path(question), class: "btn btn-secondary" %>
				<%= link_to "Destroy", question_path(question), class: "btn btn-danger", data: {"turbo-method": :delete, "turbo-confirm": "Are you sure?"} %>
			</div>
		</article>
	<% end %>
</div>